@page "/training-sessions"
@using BeFitBlazor.Data
@using BeFitBlazor.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Training Sessions</PageTitle>

<h1>Training Sessions</h1>

<p>
    <a href="/training-sessions/create" class="btn btn-primary">Add New Training Session</a>
</p>

@if (trainingSessions == null)
{
    <p><em>Loading...</em></p>
}
else if (!trainingSessions.Any())
{
    <p><em>No training sessions added yet.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Duration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in trainingSessions)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@item.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@((item.EndTime - item.StartTime).TotalMinutes.ToString("F0")) minutes</td>
                    <td>
                        <a href="@($"/training-sessions/edit/{item.Id}")" class="btn btn-sm btn-warning">Edit</a>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteTrainingSession(item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TrainingSession>? trainingSessions;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var userId = await GetCurrentUserIdAsync();
        trainingSessions = await DbContext.TrainingSessions
            .Where(t => t.UserId == userId)
            .OrderByDescending(t => t.StartTime)
            .ToListAsync();
    }

    private async Task<string> GetCurrentUserIdAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        return UserManager.GetUserId(user) ?? string.Empty;
    }

    private async Task DeleteTrainingSession(int id)
    {
        var userId = await GetCurrentUserIdAsync();
        var trainingSession = await DbContext.TrainingSessions.FindAsync(id);
        
        // Verify ownership before deleting
        if (trainingSession != null && trainingSession.UserId == userId)
        {
            DbContext.TrainingSessions.Remove(trainingSession);
            await DbContext.SaveChangesAsync();
            await LoadData();
        }
    }
}
