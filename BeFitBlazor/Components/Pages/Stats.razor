@page "/stats"
@using BeFitBlazor.Data
@using BeFitBlazor.Models
@using BeFitBlazor.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization
@inject StatsService StatsService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>İstatistikler</PageTitle>

<h1>Egzersiz İstatistikleri</h1>
<p class="text-muted">Son 4 haftalık egzersiz verileri</p>

@if (statistics == null)
{
    <p><em>Yükleniyor...</em></p>
}
else if (!statistics.Any())
{
    <div class="alert alert-info">
        <strong>Bilgi:</strong> Son 4 haftada hiç egzersiz kaydı bulunmamaktadır.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Egzersiz Adı</th>
                <th>Yapılma Sayısı</th>
                <th>Toplam Tekrar</th>
                <th>Ortalama Ağırlık (kg)</th>
                <th>Maksimum Ağırlık (kg)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stat in statistics)
            {
                <tr>
                    <td><strong>@stat.ExerciseName</strong></td>
                    <td>@stat.TimesPerformed</td>
                    <td>@stat.TotalRepetitions</td>
                    <td>@stat.AverageLoad.ToString("F2")</td>
                    <td>@stat.MaxLoad.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <p class="text-muted">
            <small>
                <strong>Not:</strong> Toplam Tekrar = Set Sayısı × Tekrar Sayısı (tüm seanslar toplamı)
            </small>
        </p>
    </div>
}

@code {
    private List<ExerciseStatistics>? statistics;

    protected override async Task OnInitializedAsync()
    {
        var userId = await GetCurrentUserIdAsync();
        statistics = await StatsService.GetExerciseStatisticsAsync(userId, weeks: 4);
    }

    private async Task<string> GetCurrentUserIdAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        return UserManager.GetUserId(user) ?? string.Empty;
    }
}
