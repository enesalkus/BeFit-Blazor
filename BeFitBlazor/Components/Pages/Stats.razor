@page "/stats"
@using BeFitBlazor.Data
@using BeFitBlazor.Models
@using BeFitBlazor.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization
@inject StatsService StatsService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Statistics</PageTitle>

<h1>Exercise Statistics</h1>
<p class="text-muted">Last 4 weeks of exercise data</p>

@if (statistics == null)
{
    <p><em>Loading...</em></p>
}
else if (!statistics.Any())
{
    <div class="alert alert-info">
        <strong>Info:</strong> No exercise records found in the last 4 weeks.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Exercise Name</th>
                <th>Times Performed</th>
                <th>Total Repetitions</th>
                <th>Average Load (kg)</th>
                <th>Max Load (kg)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stat in statistics)
            {
                <tr>
                    <td><strong>@stat.ExerciseName</strong></td>
                    <td>@stat.TimesPerformed</td>
                    <td>@stat.TotalRepetitions</td>
                    <td>@stat.AverageLoad.ToString("F2")</td>
                    <td>@stat.MaxLoad.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <p class="text-muted">
            <small>
                <strong>Note:</strong> Total Repetitions = Sets Ã— Repetitions (sum of all sessions)
            </small>
        </p>
    </div>
}

@code {
    private List<ExerciseStatistics>? statistics;

    protected override async Task OnInitializedAsync()
    {
        var userId = await GetCurrentUserIdAsync();
        statistics = await StatsService.GetExerciseStatisticsAsync(userId, weeks: 4);
    }

    private async Task<string> GetCurrentUserIdAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        return UserManager.GetUserId(user) ?? string.Empty;
    }
}
